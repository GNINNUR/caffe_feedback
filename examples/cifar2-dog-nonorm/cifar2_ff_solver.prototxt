train_net: "cifar2_ff_train.prototxt"
test_net: "cifar2_ff_test.prototxt"
# test all 20 batches which is 2000 testing images
test_iter: 20
# report testing error every 100 iterations
test_interval: 100
base_lr: 0.01
lr_policy: "step"
gamma: 0.1
stepsize: 3000
display: 100
max_iter: 10000
momentum: 0.9
weight_decay: 0.004
# snapshot: 5000
snapshot_prefix: "cifar2_ff"
device_id: 0
top_k: 1
